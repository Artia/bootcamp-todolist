%h1 Listing projects

%table.table
  %thead
    %tr
      %th Title
      %th Completed percent
      %th
      %th
      %th

  %tbody
    - @projects.each do |project|
      %tr
        %td= project.title
        %td= number_to_percentage(project.completed_percent, precision: 2)
        %td= link_to 'Tasks', project_tasks_path(project), class: 'btn btn-secondary'
        %td= link_to 'Show', project, class: 'btn btn-success'
        %td= link_to 'Edit', edit_project_path(project), class: 'btn btn-warning'
        %td= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'

%br

= link_to 'New Project', new_project_path, class: 'btn btn-dark'
