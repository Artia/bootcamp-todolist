%h1 Listing tasks

%table.table
  %thead
    %tr
      %th Title
      %th Date start
      %th Date end
      %th Deadline
      %th State
      %th
      %th
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.title
        %td= task.formated_start_date
        %td= task.formated_end_date
        %td= task.deadline_status
        %td= link_to task.human_state, project_task_change_status_path(@project, task), data: { turbo_method: :put }, class: task.human_state == 'Concluded' ? 'btn btn-success' : 'btn btn-secondary'
        %td= link_to 'Show', project_task_path(@project, task), class: 'btn btn-info'
        %td= link_to 'Edit', edit_project_task_path(@project, task), class: 'btn btn-warning'
        %td= link_to 'Destroy', project_task_path(@project, task), data: { turbo_confirm: 'Are you sure?', turbo_method: :delete }, class: 'btn btn-danger'

%br

= link_to 'New Task', new_project_task_path(@project), class: 'btn btn-dark'
