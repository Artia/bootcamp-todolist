%h1 Listing tasks

%table.table
  %thead
    %tr
      %th Title
      %th Date start
      %th Date end
      %th State
      %th
      %th
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.title
        %td= task.date_start
        %td= task.date_end
        %td= task.state
        %td= link_to 'Show', project_task_path(@project, task)
        %td= link_to 'Edit', edit_project_task_path(@project, task)
        %td= link_to 'Destroy', project_task_path(@project, task), data: { turbo_confirm: 'Are you sure?', turbo_method: :delete }

%br

= link_to 'New Task', new_project_task_path(@project), class: 'btn btn-dark'
