%h1 Listing tasks

%table.table
  %thead
    %tr
      %th Title
      %th Date start
      %th Date end
      %th Situation
      %th State
      %th
      %th
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.title
        %td= task.date_start.strftime('%d/%m/%Y %H:%M')
        %td= task.date_end.strftime('%d/%m/%Y %H:%M')
        %td= task.validate_situation
        %td= link_to task.human_state, project_task_change_status_path(@project, task), data: {turbo_method: :put}, class: 'btn btn-outline-secondary'
        %td= link_to 'Show', project_task_path(@project, task), class: 'btn btn-outline-info'
        %td= link_to 'Edit', edit_project_task_path(@project, task), class: 'btn btn-outline-warning'
        %td= link_to 'Destroy', project_task_path(@project, task), data: { turbo_confirm: 'Are you sure?', turbo_method: :delete }, class: 'btn btn-outline-danger'

%br

= link_to 'New Task', new_project_task_path(@project), class: 'btn btn-dark'
